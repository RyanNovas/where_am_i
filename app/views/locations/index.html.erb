<%=  form_for @location, url: {action: "create"} do |f|%>
  <%= f.label :latitude %>
  <%= f.text_field :latitude %>
  <%= f.label :longitude %>
  <%= f.text_field :longitude %>
  <%= f.submit %>
<% end %>
